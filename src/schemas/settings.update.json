{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/settings.update.json#",
  "title": "schemas.UPDATE_SETTINGS_TITLE",
  "type": "object",
  "properties": {
    "shortTime": {
      "type": "string",
      "group": "schemas.TIME_FORMAT_SETTINGS",
      "field": {
        "component": "form/KTextField",
        "helper": "schemas.TIME_FORMAT_SHORT_TIME_FIELD_HELPER"
      }
    },
    "longTime": {
      "type": "string",
      "group": "schemas.TIME_FORMAT_SETTINGS",
      "field": {
        "component": "form/KTextField",
        "helper": "schemas.TIME_FORMAT_LONG_TIME_FIELD_HELPER"
      }
    },
    "shortDate": {
      "type": "string",
      "group": "schemas.TIME_FORMAT_SETTINGS",
      "field": {
        "component": "form/KTextField",
        "helper": "schemas.TIME_FORMAT_SHORT_DATE_FIELD_HELPER"
      }
    },
    "longDate": {
      "type": "string",
      "group": "schemas.TIME_FORMAT_SETTINGS",
      "field": {
        "component": "form/KTextField",
        "helper": "schemas.TIME_FORMAT_LONG_DATE_FIELD_HELPER"
      }
    },
    "shortYear": {
      "type": "string",
      "group": "schemas.TIME_FORMAT_SETTINGS",
      "field": {
        "component": "form/KTextField",
        "helper": "schemas.TIME_FORMAT_SHORT_YEAR_FIELD_HELPER"
      }
    },
    "longYear": {
      "type": "string",
      "group": "schemas.TIME_FORMAT_SETTINGS",
      "field": {
        "component": "form/KTextField",
        "helper": "schemas.TIME_FORMAT_LONG_YEAR_FIELD_HELPER"
      }
    },
    "utc": {
      "type": "boolean",
      "group": "schemas.TIME_FORMAT_SETTINGS",
      "field": {
        "component": "form/KToggleField",
        "helper": "schemas.TIME_FORMAT_UTC_FIELD_HELPER"
      }
    },
    "restoreView": {
      "type": "boolean",
      "field": {
        "component": "form/KToggleField",
        "helper": "schemas.RESTORE_VIEW_FIELD_HELPER"
      }
    },
    "location": {
      "type": "string",
      "field": {
        "component": "form/KTextField",
        "helper": "schemas.LOCATION_FORMAT"
      }
    },
    "timelineSpan": {
      "type": "number",
      "group": "schemas.TIMELINE_SETTINGS",
      "field": {
        "component": "form/KNumberField",
        "helper": "schemas.TIMELINE_SPAN"
      }
    },
    "timelineOffset": {
      "type": "number",
      "group": "schemas.TIMELINE_SETTINGS",
      "field": {
        "component": "form/KNumberField",
        "helper": "schemas.TIMELINE_OFFSET"
      }
    },
    "timelineStep": {
      "type": "number",
      "group": "schemas.TIMELINE_SETTINGS",
      "field": {
        "component": "form/KSelectField",
        "helper": "schemas.TIMELINE_STEP",
        "options": [
          { "label": "5m", "value": 5  },
          { "label": "10m", "value": 10 },
          { "label": "15m", "value": 15 },
          { "label": "30m", "value": 30 },
          { "label": "1h", "value": 60, "selected": true },
          { "label": "3h", "value": 180 },
          { "label": "6h", "value": 360 },
          { "label": "12h", "value": 720 }
        ]
      }
    },
    "timelineReference": {
      "type": "string",
      "group": "schemas.TIMELINE_SETTINGS",
      "field": {
        "component": "form/KTextField",
        "helper": "schemas.TIMELINE_REFERENCE"
      }
    },
    "timeseriesSpan": {
      "type": "number",
      "group": "schemas.TIMESERIES_SETTINGS",
      "field": {
        "component": "form/KNumberField",
        "helper": "schemas.TIMESERIES_SPAN"
      }
    }
  },
  "required": [
    "shortTime",
    "longTime",
    "shortDate",
    "longDate",
    "shortYear",
    "longYear",
    "utc",
    "location",
    "restoreView"
  ]
}
